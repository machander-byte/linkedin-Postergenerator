# Branding
BRAND_NAME=ZETTALOGIX Daily
LOGO_PATH=assets/logo.png
POSTER_FORMAT=square  # square | landscape
MAX_POSTS=2

# Behavior
DRY_RUN=true          # set to false to enable real LinkedIn posting

# Optional news sources
# Get a key from https://newsapi.org/ (optional)
NEWS_API_KEY=

# LinkedIn (required only for real posting)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:3000/callback
# Choose one author URN below (person or organization)
# urn:li:person:YOUR_PERSON_ID
# urn:li:organization:YOUR_ORG_ID
LINKEDIN_AUTHOR_URN=

# Provide either an access token OR a refresh token (preferred)
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_REFRESH_TOKEN=
